<% layout('layouts/boilerplate.ejs')%>
<div class="row">
  <h1 class="text-center">EDIT <%=book.title%></h1>

  <div class="col-6 offset-3">
    <form
      action="/books/<%=book._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <!-- TITLE INPUT -->
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="book[title]"
          value="<%=book.title%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a valid title.</div>
      </div>

      <!-- LOCATION INPUT -->
      <div class="mb-3">
        <label class="form-label" for="location">location</label>
        <input
          class="form-control"
          type="text-area"
          id="location"
          name="book[location]"
          value="<%=book.location%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a valid city.</div>
      </div>

      <!-- IMAGE INPUT -->
      <div class="mb-3">
        <label for="formFileMultiple" class="form-label">Add more images</label>
        <input
          name="image"
          class="form-control"
          type="file"
          id="formFileMultiple"
          multiple
        />
      </div>

      <!-- DESCRIPTION INPUT -->
      <div class="mb-3">
        <label class="form-label" for="desc">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="desc"
          name="book[desc]"
          required
        >
       <%=book.desc%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a description.</div>
      </div>

      <!-- PRICE INPUT -->
      <label class="form-label" for="price">Price</label>
      <div class="input-group mb-3">
        <span class="input-group-text" id="price-label">$</span>
        <input
          class="form-control"
          type="text"
          id="price"
          aria-describedby="price-label"
          name="book[price]"
          value="<%=book.price%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a valid price.</div>
      </div>

      <div class="mb-3">
        <% book.images.forEach(function(image, i){ %>
        <img src="<%=image.thumbnail%>" alt="" class="img-thumbnail" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            name="deleteImages[]"
            value="<%= image.filename %>"
            id="img-<%=i%>"
          />
        </div>
        <label for="img-<%=i%>">Delete</label>
        <% }) %>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-info">Update Book</button>
      </div>
    </form>
    <a href="/books/<%= book._id %> ">back to book</a>
  </div>
</div>
